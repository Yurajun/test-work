@media only screen and (min-width: 960px)
	.wrapper-page
		position absolute
		top 0
		right 0
		left 0
		bottom 0
		display grid
		min-height 100vh
		grid-template-rows 5.278810408921933vw 1fr


	.header
		padding 0 2.527881040892193vw 0 2.304832713754647vw
		flex-direction row
		min-width 100vw
		height 5.278810408921933vw

	.content
		position absolute
		top 0
		right 0
		left 0
		bottom 0
		padding-top 5.278810408921933vw
		display grid
		grid-template-columns 1fr 1fr 1fr
		grid-template-rows 1fr 1fr 1fr

		&__item

			&_a
				grid-row 1
				grid-column 1

			&_b
				grid-row 1
				grid-column 2

			&_c
				grid-row 1
				grid-column 3

			&_d
				grid-row 2
				grid-column 1

			&_e
				grid-row 2
				grid-column 2

			&_f
				grid-row 2
				grid-column 3

			&_j
				grid-row 3
				grid-column 1

			&_h
				grid-row 3
				grid-column 2

			&_i
				grid-row 3
				grid-column 3


