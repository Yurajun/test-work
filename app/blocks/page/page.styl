	.link-box

		&__content

			&_owl
				size(42.15613382899628vw, 14.944237918215614vw)
			&_frog
				size(46.17100371747212vw, 13.82899628252788vw)
			&_owl2
				size(38.81040892193309vw, 13.60594795539033vw)
			&_ship
				size(41.48698884758364vw, 14.49814126394052vw)
			&_king
				size(40.14869888475836vw, 11.82156133828996vw)
			&_girl
				size(50.63197026022305vw, 19.182156133829vw)
