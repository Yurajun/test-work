.header
	position relative
	z-index 5
	display flex
	background-color $header-phone
	justify-content space-between

.content
	display block

	&__item
		position relative
		overflow hidden

.link-box
	position relative
	top 0
	right 0
	left 0
	bottom 0
	font-size 0
	text-decoration none
	background-repeat no-repeat
	background-position center center
	background-size cover
	transition all .2s

	&
		display flex
		align-items center
		justify-content center
		size(100%)

	&_owl
		retinaBackground(owl, jpg)
	&_frog
		retinaBackground(frog, jpg)
	&_owl2
		retinaBackground(owl2, jpg)
	&_ship
		retinaBackground(ship, jpg)
	&_king
		retinaBackground(king, jpg)
	&_girl
		background-position center 44%
		retinaBackground(girl, jpg)
	&_girl2
		retinaBackground(girl2, jpg)
	&_boyes
		retinaBackground(boyes, jpg)
	&_boy
		retinaBackground(boy, jpg)

	&__content
		background-repeat no-repeat
		background-position center center
		background-size cover
		transition all .2s

		&_owl
			retinaBackground(owl-text, png)
		&_frog
			retinaBackground(frog-text, png)
		&_owl2
			retinaBackground(owl2-text, png)
		&_ship
			retinaBackground(ship-text, png)
		&_king
			retinaBackground(king-text, png)
		&_girl
			retinaBackground(girl-text, png)
		&_girl2
			retinaBackground(girl2-text, png)
		&_boyes
			retinaBackground(fox-text, png)
		&_boy
			retinaBackground(baby-text, png)



